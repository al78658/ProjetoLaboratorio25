@{
    Layout = null;
    var configuracao = ViewBag.Configuracao as ProjetoLaboratorio25.Models.ConfiguracaoFase;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Configurar Competição</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            min-height: 100vh;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .main-container {
            padding-top: 140px;
            margin-bottom: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-left: 20px;
            padding-right: 20px;
            width: 90%;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            font-size: 32px;
            margin-bottom: 32px;
            color: black;
            text-align: center;
        }

        form {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 2fr;
            row-gap: 20px;
            column-gap: 16px;
            align-items: center;
        }

        label {
            font-size: 18px;
            color: black;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #444;
        }

        .checkbox-list {
            padding: 10px;
            background: white;
            border: 1px solid #333;
            border-radius: 6px;
            max-height: 140px;
            overflow-y: auto;
        }

            .checkbox-list label {
                display: flex;
                align-items: center;
                gap: 8px;
                font-size: 16px;
                margin-bottom: 6px;
            }

        .save-button {
            grid-column: span 2;
            justify-self: center;
            margin-top: 16px;
            font-size: 18px;
            padding: 14px 32px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

            .save-button:hover {
                background-color: #dcdcdc;
            }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            opacity: 1 !important;
        }

        @@media (max-width: 768px) {
            h2 {
                font-size: 24px;
            }

            form {
                grid-template-columns: 1fr;
            }

            .save-button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <!-- Conteúdo -->
    <div class="main-container">
        <h2>Configurar Fase @ViewBag.FaseNumero</h2>

        <form method="post">
            <input type="hidden" name="faseNumero" value="@ViewBag.FaseNumero" />

            <label for="formato">Formato:</label>
            <select id="formato" name="formato" required>
                <option value="">Escolher Formato</option>
                @{
                    var formatos = new Dictionary<string, string>
                    {
                        { "liga", "Liga (Round Robin)" },
                        { "eliminacao", "Eliminação Simples" },
                        { "grupos", "Grupos" }
                    };

                    foreach (var formato in formatos)
                    {
                        if (configuracao?.Formato == formato.Key)
                        {
                            <option value="@formato.Key" selected>@formato.Value</option>
                        }
                        else
                        {
                            <option value="@formato.Key">@formato.Value</option>
                        }
                    }
                }
            </select>

            <label for="vitoria">Pontos por Vitória:</label>
            <input type="number" id="vitoria" name="vitoria" min="0" value="@(configuracao?.PontosVitoria ?? 0)" required />

            <label for="empate">Pontos por Empate:</label>
            <input type="number" id="empate" name="empate" min="0" value="@(configuracao?.PontosEmpate ?? 0)" required />

            <label for="derrota">Pontos por Derrota:</label>
            <input type="number" id="derrota" name="derrota" min="0" value="@(configuracao?.PontosDerrota ?? 0)" required />

            <label>Critérios de Desempate:</label>
            <div class="checkbox-list">
                @{
                    var criterios = new Dictionary<string, string>
                    {
                        { "saldo", "Saldo de partidas (ganhas - perdidas)" },
                        { "confronto", "Confronto direto (entre os empatados)" },
                        { "vitorias", "Maior número de vitórias" },
                        { "menor-derrotas", "Menor número de derrotas" }
                    };

                    foreach (var criterio in criterios)
                    {
                        var isChecked = configuracao?.CriteriosDesempate?.Contains(criterio.Key) == true;
                        <label>
                            <input type="checkbox" name="criterios" value="@criterio.Key" @(isChecked ? "checked" : "") />
                            @criterio.Value
                        </label>
                    }
                }
            </div>

            <button type="submit" class="save-button">Salvar Configuração</button>
        </form>
    </div>

    <!-- Botão Voltar -->
    <a href="/FormatodaCompeticao" class="back-button">&lt;Voltar</a>
</body>
</html>
