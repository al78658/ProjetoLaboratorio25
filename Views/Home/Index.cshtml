@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Homepage - Bilhar</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            color: #333;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            min-height: 100vh;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
        }

        .top-bar {
            width: 100%;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 20px;
        }

        .search-box {
            display: flex;
            align-items: center;
            border: 2px solid #ccc;
            border-radius: 40px;
            background: white;
            padding: 10px 25px;
        }

            .search-box input {
                border: none;
                outline: none;
                padding: 15px;
                font-size: 18px;
                width: 400px;
            }

        .button {
            background: white;
            border: 2px solid black;
            border-radius: 10px;
            padding: 18px 30px;
            cursor: pointer;
            font-size: 20px;
        }

            .button:hover {
                background-color: #dcdcdc;
            }

        .icon {
            font-size: 32px;
            text-decoration: none;
            color: black;
        }

            .icon:hover {
                transform: scale(1.2);
                transition: transform 0.2s ease-in-out;
            }

        .main {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 40px;
            flex-grow: 1;
            justify-content: center;
            width: 100%;
        }

        .main-image {
            width: 420px;
            margin-top: 30px;
            margin-bottom: 40px;
        }

        h1 {
            font-size: 28px;
            color: white;
            margin-bottom: 60px;
        }

        .main-buttons {
            display: flex;
            justify-content: center;
            gap: 50px;
            flex-wrap: wrap;
        }

            .main-buttons .button {
                padding: 50px 80px;
                font-size: 28px;
                min-width: 350px;
                border-radius: 16px;
                box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.25);
            }

        media (max-width: 900px) {
            .main-buttons

        {
            flex-direction: column;
            gap: 30px;
        }

        .main-buttons .button {
            width: 100%;
            max-width: 320px;
            font-size: 22px;
            padding: 36px 40px;
        }

        .search-box input {
            width: 250px;
        }

        .main-image {
            width: 300px;
        }

        }
    </style>
</head>
<body>

    <div class="container">

        <!-- TOPO DIREITO -->
        <div class="top-bar">
            <div class="search-box">
                <span style="font-size: 20px; margin-right: 10px;">🔍</span>
                <input type="text" placeholder="Pesquise um jogador ou equipa">
            </div>
            <button class="button">Pesquisar</button>
            <button class="button">Login</button>
            <a href="/notificacoes" class="icon" title="Ver notificações">🔔</a>
        </div>

        <!-- CONTEÚDO CENTRAL -->
        <div class="main">
            <img src="img/logotipo.png" alt="Logotipo" class="main-image" />
            <h1>Começa a acompanhar Torneios de Bilhar AGORA!</h1>

            <div class="main-buttons">
                <button class="button">Competições</button>
                <button class="button">Regras e Regulamentos</button>
                <button class="button">Ranking</button>
            </div>
        </div>

    </div>

</body>
</html>
