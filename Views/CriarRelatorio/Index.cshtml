@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Criar Relatório</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .main-container {
            padding: 20px 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
        }

        .box {
            background-color: transparent;
            padding: 24px;
            border-radius: 12px;
            width: 90%;
            max-width: 860px; /* largura intermédia */
        }

        h2 {
            font-size: 26px;
            margin-bottom: 24px;
            color: black;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        label {
            font-size: 15px;
            color: black;
            margin-bottom: 4px;
            display: block;
        }

        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 8px 10px;
            font-size: 15px;
            border: 2px solid #333;
            border-radius: 6px;
        }

        textarea {
            resize: none;
            height: 90px;
        }

        .btn {
            padding: 10px 24px;
            background-color: white;
            border: 2px solid black;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            font-size: 15px;
            align-self: center;
        }

            .btn:hover {
                background-color: #dcdcdc;
            }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }
    </style>
</head>
<body>

    <!-- Logotipo -->
    <div class="top-left-logo">
        <img src="img/logotipo.png" alt="Logotipo" />
    </div>

    <!-- Conteúdo principal -->
    <div class="main-container">
        <div class="box">
            <h2>Criar Relatório</h2>

            <form>
                <div>
                    <label for="nomeRelatorio">Nome do Relatório:</label>
                    <input type="text" id="nomeRelatorio" name="nomeRelatorio" />
                </div>

                <div>
                    <label for="descricao">Descrição (Opcional):</label>
                    <textarea id="descricao" name="descricao"></textarea>
                </div>

                <div>
                    <label for="categoria">Categoria:</label>
                    <select id="categoria" name="categoria">
                        <option>Relatório de Equipas</option>
                        <option>Relatório de Jogadores</option>
                        <option>Relatório de Competição</option>
                    </select>
                </div>

                <button type="submit" class="btn">Criar</button>
            </form>
        </div>
    </div>

    <!-- Botão Voltar -->
    <a href="/" class="back-button">&lt;Voltar</a>

</body>
</html>
