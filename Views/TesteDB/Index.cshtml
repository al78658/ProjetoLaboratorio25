@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Teste de Banco de Dados</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .section {
            margin-bottom: 30px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .form-group {
            margin-bottom: 10px;
        }
        label {
            display: inline-block;
            width: 100px;
        }
        input {
            padding: 5px;
            width: 200px;
        }
        button {
            padding: 5px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Teste de Banco de Dados</h1>

    <div class="section">
        <h2>Criar Novo Utilizador</h2>
        <form method="post" action="@Url.Action("CriarUtilizador")">
            <div class="form-group">
                <label>Nome:</label>
                <input type="text" name="nome" required />
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" required />
            </div>
            <div class="form-group">
                <label>Senha:</label>
                <input type="password" name="senha" required />
            </div>
            <button type="submit">Criar Utilizador</button>
        </form>
    </div>

    <div class="section">
        <h2>Criar Nova Competição</h2>
        <form method="post" action="@Url.Action("CriarCompeticao")">
            <div class="form-group">
                <label>Nome:</label>
                <input type="text" name="nome" required />
            </div>
            <div class="form-group">
                <label>Tipo:</label>
                <input type="text" name="tipo" required />
            </div>
            <div class="form-group">
                <label>Nº Jogadores:</label>
                <input type="number" name="numJogadores" required min="2" />
            </div>
            <div class="form-group">
                <label>Nº Equipas:</label>
                <input type="number" name="numEquipas" required min="2" />
            </div>
            <button type="submit">Criar Competição</button>
        </form>
    </div>

    <div class="section">
        <h2>Utilizadores Cadastrados</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
            </tr>
            @if (ViewBag.Utilizadores != null)
            {
                @foreach (var user in ViewBag.Utilizadores)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UtilizadorNome</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }
        </table>
    </div>

    <div class="section">
        <h2>Competições Cadastradas</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Nº Jogadores</th>
                <th>Nº Equipas</th>
            </tr>
            @if (ViewBag.Competicoes != null)
            {
                @foreach (var comp in ViewBag.Competicoes)
                {
                    <tr>
                        <td>@comp.Id</td>
                        <td>@comp.Nome</td>
                        <td>@comp.TipoCompeticao</td>
                        <td>@comp.NumJogadores</td>
                        <td>@comp.NumEquipas</td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
</html> 