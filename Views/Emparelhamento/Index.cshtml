@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Emparelhamento</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            min-height: 100vh;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        h1 {
            font-size: 36px;
            color: black;
            margin-bottom: 40px;
            text-align: center;
        }

        .table-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        table {
            border-collapse: collapse;
            background-color: white;
            width: 60%;
            min-width: 600px;
        }

        th, td {
            border: 1px solid black;
            padding: 14px;
            text-align: center;
            font-size: 18px;
        }

        th {
            background-color: #e0e0e0;
            font-weight: bold;
        }

        .definir-button {
            padding: 10px 20px;
            font-size: 16px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
        }

            .definir-button:hover {
                background-color: #dcdcdc;
            }

        .save-container {
            margin-top: 30px;
            text-align: center;
        }

        .save-button {
            padding: 12px 28px;
            font-size: 18px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
        }

            .save-button:hover {
                background-color: #dcdcdc;
            }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        @@media (max-width: 700px) {
            table {
                width: 90%;
                min-width: unset;
            }

            .save-button, .definir-button {
                width: 100%;
            }

            h1 {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="top-left-logo">
        <a href="/Home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <h1>Emparelhamento</h1>

    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Jogador 1</th>
                    <th>Data e Horário</th>
                    <th>Jogador 2</th>
                </tr>
            </thead>
            <tbody id="pairsTableBody"></tbody>
        </table>
    </div>

    <div class="save-container">
        <button class="save-button" id="saveButton">Guardar</button>
    </div>

    <a href="/ListadeJogadores" class="back-button">&lt;Voltar</a>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const pairsTableBody = document.getElementById('pairsTableBody');
            const saveButton = document.getElementById('saveButton');

            const jogadores = JSON.parse(localStorage.getItem('jogadores')) || [];
            const agendamentos = JSON.parse(localStorage.getItem('agendamentos')) || [];

            const meio = Math.ceil(jogadores.length / 2);
            const ladoEsquerdo = jogadores.slice(0, meio);
            const ladoDireito = jogadores.slice(meio);

            for (let i = 0; i < Math.max(ladoEsquerdo.length, ladoDireito.length); i++) {
                const jogador1 = ladoEsquerdo[i] || '';
                const jogador2 = ladoDireito[i] || '';

                const agendamento = agendamentos.find(a =>
                    (a.jogador1 === jogador1 && a.jogador2 === jogador2) ||
                    (a.jogador1 === jogador2 && a.jogador2 === jogador1)
                );

                const row = document.createElement('tr');

                if (agendamento) {
                    row.innerHTML = `
                        <td>${jogador1}</td>
                        <td>${agendamento.data} ${agendamento.hora}</td>
                        <td>${jogador2}</td>
                    `;
                } else {
                    row.innerHTML = `
                        <td>${jogador1}</td>
                        <td>
                            <button class="definir-button"
                                data-jogador1="${jogador1}"
                                data-jogador2="${jogador2}"
                                onclick="definirJogo(this)">Definir</button>
                        </td>
                        <td>${jogador2}</td>
                    `;
                }

                pairsTableBody.appendChild(row);
            }

            saveButton.addEventListener('click', function () {
                alert('Emparelhamentos guardados com sucesso!');
                window.location.href = '/Menu';
            });
        });

        function definirJogo(button) {
            const jogador1 = button.getAttribute('data-jogador1');
            const jogador2 = button.getAttribute('data-jogador2');

            localStorage.setItem('jogoSelecionado', JSON.stringify({ jogador1, jogador2 }));
            localStorage.setItem('paginaOrigem', 'emparelhamento');
            window.location.href = '/AgendarJogos';
        }
    </script>
</body>
</html>
