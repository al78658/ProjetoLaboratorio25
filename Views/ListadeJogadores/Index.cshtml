@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Lista dos Jogadores</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            min-height: 100vh;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .main-container {
            padding-top: 140px;
            margin-bottom: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-left: 20px;
            padding-right: 20px;
            width: 90%;
            max-width: 800px; /* reduzido */
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            font-size: 32px; /* reduzido */
            margin-bottom: 40px;
            color: black;
        }

        .input-row {
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        label {
            font-size: 18px;
            color: black;
        }

        input[type="number"] {
            width: 80px;
            padding: 8px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #444;
        }

        .player-table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            display: block;
            margin-bottom: 50px;
        }

            .player-table thead {
                display: table;
                width: 100%;
                table-layout: fixed;
            }

            .player-table th {
                background-color: #dcdcdc;
                padding: 12px;
                text-align: left;
                font-size: 16px;
            }

        .scrollable-body {
            display: block;
            max-height: 220px;
            overflow-y: auto;
            width: 100%;
        }

            .scrollable-body tr {
                display: table;
                width: 100%;
                table-layout: fixed;
            }

            .scrollable-body td {
                padding: 12px;
                font-size: 16px;
                border-top: 1px solid #ccc;
            }

        .button-row {
            display: flex;
            justify-content: space-between;
            width: 100%;
            max-width: 600px;
            padding: 0 10px;
        }

        .action-button {
            font-size: 18px;
            padding: 14px 32px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 3px 3px 6px rgba(0,0,0,0.2);
        }

            .action-button:hover {
                background-color: #dcdcdc;
            }

        .back-button {
            position: absolute;
            right: 40px;
            bottom: 40px;
            padding: 12px 24px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        media (max-width: 768px) {
            h2

        {
            font-size: 24px;
        }

        .input-row {
            flex-direction: column;
            align-items: flex-start;
        }

        .button-row {
            flex-direction: column;
            gap: 16px;
            align-items: center;
        }

        .action-button {
            width: 100%;
            text-align: center;
        }

        .scrollable-body td {
            font-size: 14px;
        }

        .player-table th {
            font-size: 14px;
        }

        }
    </style>
</head>
<body>

    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/Home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <!-- Conteúdo -->
    <div class="main-container">
        <h2>Lista dos Jogadores</h2>

        <div class="input-row">
            <label for="numJogadores">Número de Jogadores:</label>
            <input type="number" id="numJogadores" name="numJogadores" min="1" />
        </div>

        <table class="player-table">
            <thead>
                <tr>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody class="scrollable-body">
                <tr><td>Giacomo Guilizzoni</td></tr>
                <tr><td>Marco Botton</td></tr>
                <tr><td>Mariah Maclachlan</td></tr>
                <tr><td>João Ribeiro</td></tr>
                <tr><td>Jogador Extra 1</td></tr>
                <tr><td>Jogador Extra 2</td></tr>
                <tr><td>Jogador Extra 3</td></tr>
                <tr><td>Jogador Extra 4</td></tr>
                <tr><td>Jogador Extra 5</td></tr>
            </tbody>
        </table>

        <div class="button-row">
            <button type="button" class="action-button" id="alterarListaButton">Alterar Lista</button>
            <button type="button" class="action-button" id="emparelharButton">Emparelhar</button>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const emparelharButton = document.getElementById('emparelharButton');

                emparelharButton.addEventListener('click', function () {
                    // Redireciona para a view "Emparelhamento"
                    window.location.href = '/Emparelhamento';
                });
            });
        </script>

    </div>

    <!-- Botão Voltar -->
    <a href="/FormatodaCompeticao" class="back-button">&lt;Voltar</a>

</body>
</html>
