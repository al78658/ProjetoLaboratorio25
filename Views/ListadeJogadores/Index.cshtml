﻿﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <title>Lista dos Jogadores</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            min-height: 100vh;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .main-container {
            padding-top: 140px;
            margin-bottom: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-left: 20px;
            padding-right: 20px;
            width: 90%;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            font-size: 32px;
            margin-bottom: 40px;
            color: black;
        }

        .input-row {
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        label {
            font-size: 18px;
            color: black;
        }

        input[type="number"] {
            width: 80px;
            padding: 8px;
            font-size: 16px;
            border-radius: 6px;
            border: 1px solid #444;
        }

        .player-table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            display: block;
            margin-bottom: 50px;
        }

            .player-table thead {
                display: table;
                width: 100%;
                table-layout: fixed;
            }

            .player-table th {
                background-color: #dcdcdc;
                padding: 12px;
                text-align: left;
                font-size: 16px;
            }

        .scrollable-body {
            display: block;
            max-height: 220px;
            overflow-y: auto;
            width: 100%;
        }

            .scrollable-body tr {
                display: table;
                width: 100%;
                table-layout: fixed;
            }

            .scrollable-body td {
                padding: 12px;
                font-size: 16px;
                border-top: 1px solid #ccc;
            }

        .button-row {
            display: flex;
            justify-content: space-between;
            width: 100%;
            max-width: 600px;
            padding: 0 10px;
        }

        .action-button {
            font-size: 18px;
            padding: 14px 32px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 3px 3px 6px rgba(0,0,0,0.2);
        }

            .action-button:hover {
                background-color: #dcdcdc;
            }

        .back-button {
            position: absolute;
            right: 40px;
            bottom: 40px;
            padding: 12px 24px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
</head>
<body>
    <div class="top-left-logo">
        <a href="/Home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <div class="main-container">
        <h2>Lista dos Jogadores</h2>

        <div class="input-row">
            <label for="numJogadores">Número de Jogadores:</label>
            <input type="number" id="numJogadores" name="numJogadores" readonly />
        </div>

        <table class="player-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Código</th>
                    <th>Data Nascimento</th>
                    <th>Categoria</th>
                    <th>Clube</th>
                </tr>
            </thead>
            <tbody class="scrollable-body">
                <!-- Os jogadores serão carregados dinamicamente via JavaScript -->
            </tbody>
        </table>

        <div class="button-row">
            <button type="button" class="action-button" id="alterarListaButton">Alterar Lista</button>
            <button type="button" class="action-button" id="emparelharButton">Emparelhar</button>
        </div>

        <input type="file" id="fileInput" accept=".xlsx" hidden />

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const fileInput = document.getElementById('fileInput');
                const alterarListaButton = document.getElementById('alterarListaButton');
                const emparelharButton = document.getElementById('emparelharButton');
                const tableBody = document.querySelector('.scrollable-body');
                const numJogadoresInput = document.getElementById('numJogadores');
                
                // Array para armazenar os jogadores
                let jogadoresArray = [];

                // Atualizar o contador de jogadores
                function atualizarContadorJogadores() {
                    numJogadoresInput.value = jogadoresArray.length;
                }

                // Renderizar a tabela de jogadores
                function renderizarTabelaJogadores() {
                    tableBody.innerHTML = '';
                    
                    jogadoresArray.forEach((jogador, index) => {
                        const tr = document.createElement('tr');
                        tr.setAttribute('data-index', index);
                        
                        tr.innerHTML = `
                            <td>${jogador.nome}</td>
                            <td>${jogador.codigo}</td>
                            <td>${jogador.dataNascimento}</td>
                            <td>${jogador.categoria}</td>
                            <td>${jogador.clube}</td>
                        `;
                        
                        tableBody.appendChild(tr);
                    });
                    
                    atualizarContadorJogadores();
                }

                // Verificar se há jogadores no localStorage
                const jogadoresSalvos = localStorage.getItem('jogadoresImportados');
                if (jogadoresSalvos) {
                    jogadoresArray = JSON.parse(jogadoresSalvos);
                    renderizarTabelaJogadores();
                }

                alterarListaButton.addEventListener('click', () => fileInput.click());

                fileInput.addEventListener('change', function (event) {
                    const file = event.target.files[0];
                    if (!file) return;

                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const data = new Uint8Array(e.target.result);
                        const workbook = XLSX.read(data, { type: 'array' });
                        const sheet = workbook.Sheets[workbook.SheetNames[0]];
                        const rows = XLSX.utils.sheet_to_json(sheet, { header: 1 });

                        // Processar os dados do Excel
                        jogadoresArray = [];
                        
                        // Formato esperado no Excel: Nome Codigo DataNascimento Categoria Clube
                        rows.forEach(row => {
                            if (row && row.length > 0) {
                                const linha = row.join(' ');
                                const partes = linha.split(' ');
                               
                                if (partes.length >= 5) {
                                     // Encontrar o código (formato: XX000)
                                    let codigoIndex = -1;
                                    for (let i = 0; i < partes.length; i++) {
                                        if (/^[A-Z]{2}\d{3}$/.test(partes[i])) {
                                            codigoIndex = i;
                                            break;
                                        }
                                    }
                                    
                                    if (codigoIndex > 0) {
                                        const nome = partes.slice(0, codigoIndex).join(' ');
                                        const codigo = partes[codigoIndex];
                                        const dataNascimento = partes[codigoIndex + 1];
                                        const categoria = partes[codigoIndex + 2];
                                        const clube = partes.slice(codigoIndex + 3).join(' ');
                                        
                                        jogadoresArray.push({
                                            nome: nome,
                                            codigo: codigo,
                                            dataNascimento: dataNascimento,
                                            categoria: categoria,
                                            clube: clube
                                        });
                                    }
                                }
                            }
                        });
                        
                        // Salvar no localStorage
                        localStorage.setItem('jogadoresImportados', JSON.stringify(jogadoresArray));
                        
                        // Atualizar a tabela
                        renderizarTabelaJogadores();
                    };
                    reader.readAsArrayBuffer(file);
                });

                emparelharButton.addEventListener('click', function () {
                    if (jogadoresArray.length < 2) {
                        alert('Insere pelo menos 2 jogadores.');
                        return;
                    }

                    if (jogadoresArray.length % 2 !== 0) {
                        alert('O número de jogadores deve ser par para emparelhamento.');
                        return;
                    }

                    localStorage.setItem('jogadoresParaEmparelhar', JSON.stringify(jogadoresArray));
                    window.location.href = '/Emparelhamento';
                });
            });
        </script>
    </div>

    <a href="/FormatodaCompeticao" class="back-button">&lt;Voltar</a>
</body>
</html>
