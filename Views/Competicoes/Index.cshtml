@model List<ProjetoLaboratorio25.Models.Competicao>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Competições - Bilhar</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        /* Novo: Container que centraliza verticalmente */
        .content-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 20px;
            text-align: center;
        }

        h2 {
            font-size: 36px;
            margin-bottom: 30px;
            color: black;
            text-align: center;
            margin-top: 0;
        }

        /* Estilos da lista de competições */
        .competition-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
            width: 100%;
        }

        .competition-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 colunas */
            gap: 20px;
            max-height: 400px;
            overflow-y: auto;
            border: 2px solid black;
            padding: 20px;
            border-radius: 12px;
            background-color: white;
            width: 80%;
            justify-items: center;
            align-items: center;
        }

        .competition {
            background-color: white;
            border: 2px solid black;
            border-radius: 12px;
            width: 160px;
            height: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.25);
            cursor: pointer;
            transition: transform 0.2s ease;
        }

            .competition:hover {
                background-color: #dcdcdc;
                transform: scale(1.05);
            }

        .thumb {
            width: 80px;
            height: 80px;
            background-color: #ccc;
            border-radius: 50%;
            margin-bottom: 16px;
        }

        .competition p {
            font-size: 20px;
            font-weight: bold;
            color: black;
        }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        .container {
            margin-top: 120px;
            padding: 20px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .section {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #333;
        }

        input, select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <!-- Conteúdo central vertical -->
    <div class="content-wrapper">
        <h2>Competições a decorrer</h2>

        <!-- Lista de Competições -->
        <div class="competition-container" id="competicaoList"></div>
    </div>

    <!-- Botão Voltar -->
        <a href="/Home" class="back-button">&lt;Voltar</a>

    <div class="container">
        <div class="section">
            <h2>Criar Nova Competição</h2>
            <form method="post" action="@Url.Action("CriarCompeticao")">
                <div class="form-group">
                    <label for="nome">Nome da Competição:</label>
                    <input type="text" id="nome" name="nome" required />
                </div>
                <div class="form-group">
                    <label for="tipo">Tipo de Competição:</label>
                    <select id="tipo" name="tipo" required>
                        <option value="Individual">Individual</option>
                        <option value="Equipas">Equipas</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="numJogadores">Número de Jogadores:</label>
                    <input type="number" id="numJogadores" name="numJogadores" min="2" required />
                </div>
                <div class="form-group">
                    <label for="numEquipas">Número de Equipas:</label>
                    <input type="number" id="numEquipas" name="numEquipas" min="2" required />
                </div>
                <button type="submit">Criar Competição</button>
            </form>
        </div>

        <div class="section">
            <h2>Adicionar Fase à Competição</h2>
            <form method="post" action="@Url.Action("AdicionarConfiguracaoFase")">
                <div class="form-group">
                    <label for="competicaoId">Competição:</label>
                    <select id="competicaoId" name="competicaoId" required>
                        @foreach (var comp in Model)
                        {
                            <option value="@comp.Id">@comp.Nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="faseNumero">Número da Fase:</label>
                    <input type="number" id="faseNumero" name="faseNumero" min="1" required />
                </div>
                <div class="form-group">
                    <label for="formato">Formato:</label>
                    <select id="formato" name="formato" required>
                        <option value="Eliminatórias">Eliminatórias</option>
                        <option value="Grupos">Grupos</option>
                        <option value="Liga">Liga</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="pontosVitoria">Pontos por Vitória:</label>
                    <input type="number" id="pontosVitoria" name="pontosVitoria" min="0" required />
                </div>
                <div class="form-group">
                    <label for="pontosEmpate">Pontos por Empate:</label>
                    <input type="number" id="pontosEmpate" name="pontosEmpate" min="0" required />
                </div>
                <div class="form-group">
                    <label for="pontosDerrota">Pontos por Derrota:</label>
                    <input type="number" id="pontosDerrota" name="pontosDerrota" min="0" required />
                </div>
                <button type="submit">Adicionar Fase</button>
            </form>
        </div>

        <div class="section">
            <h2>Competições Cadastradas</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Nº Jogadores</th>
                        <th>Nº Equipas</th>
                        <th>Fases</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comp in Model)
                    {
                        <tr>
                            <td>@comp.Nome</td>
                            <td>@comp.TipoCompeticao</td>
                            <td>@comp.NumJogadores</td>
                            <td>@comp.NumEquipas</td>
                            <td>
                                @if (comp.ConfiguracoesFase != null && comp.ConfiguracoesFase.Any())
                                {
                                    <ul>
                                        @foreach (var fase in comp.ConfiguracoesFase.OrderBy(f => f.FaseNumero))
                                        {
                                            <li>Fase @fase.FaseNumero - @fase.Formato</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>Sem fases configuradas</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const lista = JSON.parse(localStorage.getItem('todasCompeticoes')) || [];
            const container = document.getElementById('competicaoList');

            lista.forEach(c => {
                const div = document.createElement('div');
                div.className = 'competition';
                div.onclick = () => {
                    localStorage.setItem('competicaoSelecionada', c.nome);
                    window.location.href = '/Menu';
                };

                div.innerHTML = `
                    <div class="thumb"></div>
                    <p>${c.nome}</p>
                `;

                container.appendChild(div);
            });
        });
    </script>
</body>
</html>
