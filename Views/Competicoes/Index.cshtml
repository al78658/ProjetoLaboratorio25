@model List<ProjetoLaboratorio25.Models.Competicao>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Competições</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        /* Novo: Container que centraliza verticalmente */
        .content-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 20px;
            text-align: center;
        }

        h2 {
            font-size: 36px;
            margin-bottom: 30px;
            color: black;
            text-align: center;
            margin-top: 0;
        }

        /* Estilos da lista de competições */
        .competition-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
            width: 100%;
        }

        .competition-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 colunas */
            gap: 20px;
            max-height: 400px;
            overflow-y: auto;
            border: 2px solid black;
            padding: 20px;
            border-radius: 12px;
            background-color: white;
            width: 80%;
            justify-items: center;
            align-items: center;
        }

        .competition {
            background-color: white;
            border: 2px solid black;
            border-radius: 12px;
            width: 160px;
            height: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.25);
            cursor: pointer;
            transition: transform 0.2s ease;
        }

            .competition:hover {
                background-color: #dcdcdc;
                transform: scale(1.05);
            }

        .thumb {
            width: 80px;
            height: 80px;
            background-color: #ccc;
            border-radius: 50%;
            margin-bottom: 16px;
        }

        .competition p {
            font-size: 20px;
            font-weight: bold;
            color: black;
        }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }
    </style>
</head>
<body>

    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <!-- Conteúdo central vertical -->
    <div class="content-wrapper">
        <h2>Competições a decorrer</h2>

        <!-- Lista de Competições -->
        <div class="competition-container" id="competicaoList"></div>
        
        <div style="margin-top: 30px;">
            <a href="/CriarCompeticao" class="action-button" style="text-decoration: none; padding: 14px 32px; font-size: 18px; border: 2px solid black; background: white; border-radius: 8px; cursor: pointer; box-shadow: 3px 3px 6px rgba(0,0,0,0.2);">
                Criar Nova Competição
            </a>
        </div>
    </div>

    <!-- Botão Voltar -->
    <a href="/Home" class="back-button">&lt;Voltar</a>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.getElementById('competicaoList');
            
            @if (Model != null && Model.Any())
            {
                foreach (var competicao in Model)
                {
                <text>
                let div = document.createElement('div');
                div.className = 'competition';
                div.onclick = function () {
                    localStorage.setItem('competicaoSelecionada', '@competicao.Nome');
                    window.location.href = '/Menu';
                };
                div.innerHTML = `
                    <div class="thumb"></div>
                    <p>@competicao.Nome</p>
                `;
                container.appendChild(div);
                </text>

                }
            }
            else
            {
                <text>
                // Exibir mensagem de nenhuma competição
                container.innerHTML = '<p style="grid-column: span 4; padding: 20px; font-size: 18px;">Nenhuma competição encontrada. Crie uma nova competição.</p>';
                </text>
            }
        });
    </script>
</body>
</html>