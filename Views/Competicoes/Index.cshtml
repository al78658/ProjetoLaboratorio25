@model ProjetoLaboratorio25.Controllers.CompeticoesViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Competi√ß√µes</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 20px;
            text-align: center;
        }

        h2 {
            font-size: 36px;
            margin-bottom: 30px;
            color: black;
            text-align: center;
            margin-top: 0;
        }

        .competition-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 20px;
            width: 100%;
        }

        .competition-container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            max-height: 400px;
            overflow-y: auto;
            border: 2px solid black;
            padding: 20px;
            border-radius: 12px;
            background-color: white;
            width: 80%;
            justify-items: center;
            align-items: center;
        }

        .competition {
            background-color: white;
            border: 2px solid black;
            border-radius: 12px;
            width: 160px;
            height: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.25);
            cursor: pointer;
            transition: transform 0.2s ease;
            text-decoration: none;
            color: inherit;
        }

            .competition:hover {
                background-color: #dcdcdc;
                transform: scale(1.05);
            }

        .thumb {
            width: 80px;
            height: 80px;
            background-color: #ccc;
            border-radius: 50%;
            margin-bottom: 16px;
        }

        .competition p {
            font-size: 20px;
            font-weight: bold;
            color: black;
        }

        .back-button {
            position: absolute;
            right: 30px;
            bottom: 30px;
            padding: 10px 20px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        .action-button {
            text-decoration: none;
            padding: 14px 32px;
            font-size: 18px;
            border: 2px solid black;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            box-shadow: 3px 3px 6px rgba(0,0,0,0.2);
            margin-top: 30px;
            color: black;
        }

            .action-button:hover {
                background-color: #dcdcdc;
            }

        .no-competitions {
            text-align: center;
            padding: 40px;
            font-size: 20px;
            color: #666;
            grid-column: span 4;
        }

        .user-info {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px;
            background-color: white;
            border-radius: 8px;
            border: 2px solid black;
            font-size: 14px;
        }

        .error-message {
            color: red;
            margin-bottom: 20px;
            font-size: 16px;
        }

        .competition-container::-webkit-scrollbar {
            width: 8px;
        }

        .competition-container::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .competition-container::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

        .competition-container::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
<body>
    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/home">
            <img src="@Url.Content("~/img/logotipo.png")" alt="Logotipo" />
        </a>
    </div>

    <!-- Informa√ß√£o do usu√°rio -->
    @if (!string.IsNullOrEmpty(Model.UserEmail))
    {
        <div class="user-info">
            <p>Logado como: @Model.UserEmail</p>
            @if (Model.IsAdmin)
            {
                <p>(Administrador)</p>
            }
            else if (Model.UserId.HasValue)
            {
                <p>(Organizador)</p>
            }
        </div>
    }

    <!-- Conte√∫do central vertical -->
    <div class="content-wrapper">
        <h2>Competi√ß√µes a decorrer</h2>

        @if (TempData["Erro"] != null)
        {
            <div class="error-message">
                @TempData["Erro"]
            </div>
        }
        
        <!-- Barra de pesquisa -->
        <div style="margin-bottom: 20px; display: flex; justify-content: center; width: 80%;">
            <div style="display: flex; align-items: center; width: 100%; max-width: 500px;">
                <input type="text" id="searchInput" placeholder="Pesquisar competi√ß√£o por nome..." 
                       style="flex: 1; padding: 10px; border: 2px solid #ccc; border-radius: 8px 0 0 8px; font-size: 16px; outline: none;">
                <button id="searchButton" 
                        style="padding: 10px 15px; background: white; border: 2px solid #ccc; border-left: none; border-radius: 0 8px 8px 0; cursor: pointer;">
                    üîç
                </button>
            </div>
        </div>

        <!-- Lista de Competi√ß√µes -->
        <div class="competition-container" id="competicaoList">
            @if (Model.Competicoes != null && Model.Competicoes.Any())
            {
                @foreach (var competicao in Model.Competicoes)
                {
                    <a href="@Url.Action("Index", "Menu", new { competicaoId = competicao.Id })" class="competition">
                        <div class="thumb">
                            <!-- √çcone ou imagem da competi√ß√£o -->
                        </div>
                        <p>@competicao.Nome</p>
                    </a>
                }
            }
            else
            {
                <div class="no-competitions">
                    @if (!string.IsNullOrEmpty(Model.UserEmail) && !Model.IsAdmin && Model.UserId.HasValue)
                    {
                        <p>Voc√™ n√£o tem nenhuma competi√ß√£o atribu√≠da.</p>
                    }
                    else if (!string.IsNullOrEmpty(Model.UserEmail) && !Model.IsAdmin && !Model.UserId.HasValue)
                    {
                        <p>Voc√™ n√£o tem permiss√£o para ver competi√ß√µes.</p>
                    }
                    else
                    {
                        <p>N√£o h√° competi√ß√µes dispon√≠veis no momento.</p>
                    }
                </div>
            }
        </div>

        <!-- Bot√£o vis√≠vel apenas se estiver autenticado e for admin ou organizador -->
        @if (!string.IsNullOrEmpty(Model.UserEmail) && (Model.IsAdmin || Model.UserId.HasValue))
        {
            <div style="margin-top: 50px;">
                <a href="/CriarCompeticao" class="action-button">Criar Nova Competi√ß√£o</a>
            </div>
        }
    </div>

    <!-- Bot√£o Voltar -->
    <a href="/Home" class="back-button">&lt;Voltar</a>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const searchButton = document.getElementById('searchButton');
            const competicaoList = document.getElementById('competicaoList');
            const competitions = competicaoList.getElementsByClassName('competition');

            function filterCompetitions() {
                const searchTerm = searchInput.value.toLowerCase();

                Array.from(competitions).forEach(competition => {
                    const name = competition.querySelector('p').textContent.toLowerCase();
                    if (name.includes(searchTerm)) {
                        competition.style.display = '';
                    } else {
                        competition.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterCompetitions);
            searchButton.addEventListener('click', filterCompetitions);
        });
    </script>
</body>
</html>
