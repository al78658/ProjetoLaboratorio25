@model IEnumerable<dynamic>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #808080;
            position: relative;
        }

        .top-left-logo {
            position: absolute;
            top: 40px;
            left: 50px;
        }

            .top-left-logo img {
                width: 160px;
            }

        .main-container {
            margin-top: 80px;
            margin-bottom: 60px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            flex-grow: 1;
            padding: 60px 20px;
        }

        h2 {
            font-size: 42px;
            margin-bottom: 20px;
            color: black;
            text-align: center;
        }

        h3 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
            font-style: italic;
        }

        .search-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto 20px auto;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .search-row {
            display: flex;
            gap: 10px;
            width: 100%;
        }

        .search-input {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: 2px solid #333;
            border-radius: 8px;
        }

        .date-input {
            padding: 10px;
            font-size: 16px;
            border: 2px solid #333;
            border-radius: 8px;
            width: 150px;
        }

        .search-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: white;
            border: 2px solid #333;
            border-radius: 8px;
            cursor: pointer;
            white-space: nowrap;
        }

        .search-button:hover {
            background-color: #e0e0e0;
        }

        .table-container {
            max-height: 300px; /* Altura fixa com rolagem */
            overflow-y: auto;
            width: 100%;
            border: 1px solid #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #333;
            background-color: white;
            padding: 16px;
            font-size: 18px;
            text-align: center;
        }

        th {
            background-color: #ddd;
        }

        .back-button {
            position: absolute;
            right: 40px;
            bottom: 40px;
            padding: 12px 24px;
            font-size: 18px;
            border: 2px solid #000;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            color: black;
        }

            .back-button:hover {
                background-color: #dcdcdc;
            }

        .no-data {
            text-align: center;
            padding: 20px;
            font-style: italic;
            color: #666;
        }
    </style>
</head>
<body>

    <!-- Logotipo -->
    <div class="top-left-logo">
        <a href="/home">
            <img src="img/logotipo.png" alt="Logotipo" />
        </a>
    </div>

    <div class="main-container">
        <div>
            <!-- Título -->
            <h2>Histórico</h2>
            <h3>@ViewBag.CompeticaoNome</h3>

            <!-- Campo de pesquisa -->
            <div class="search-container">
                <form method="get" action="/Historico">
                    <input type="hidden" name="competicaoId" value="@ViewBag.CompeticaoId" />
                    <div class="search-row">
                        <input type="text" 
                               name="searchTerm" 
                               class="search-input" 
                               placeholder="@(ViewBag.TipoCompeticao?.ToLower() == "equipas" ? "Buscar por equipa ou motivo..." : "Buscar por jogador ou motivo...")" 
                               value="@ViewBag.SearchTerm" />
                        <button type="submit" class="search-button">Pesquisar</button>
                    </div>
                    <div class="search-row">
                        <input type="date" 
                               name="dataInicio" 
                               class="date-input" 
                               placeholder="Data Início"
                               value="@ViewBag.DataInicio" />
                        <input type="date" 
                               name="dataFim" 
                               class="date-input" 
                               placeholder="Data Fim"
                               value="@ViewBag.DataFim" />
                        <button type="submit" class="search-button">Filtrar por Data</button>
                    </div>
                </form>
            </div>

            <!-- Tabela com scroll -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Partidas</th>
                            <th>Data e Horário</th>
                            <th>Resultado</th>
                            <th>Motivo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var partida in Model)
                            {
                                <tr>
                                    <td>@partida.Partidas</td>
                                    <td>@partida.DataHora</td>
                                    <td>@partida.Resultado</td>
                                    <td>@(partida.Motivo ?? "")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="no-data">
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                    {
                                        <text>Nenhuma partida encontrada para a pesquisa.</text>
                                    }
                                    else
                                    {
                                        <text>Nenhuma partida registada</text>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Botão Voltar -->
    <a href="/Menu?competicaoId=@ViewBag.CompeticaoId" class="back-button">&lt;Voltar</a>

</body>
</html>
